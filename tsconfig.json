{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "declarationDir": "./dist/types",
        "sourceMap": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "jest.config.ts", "eslint.config.mjs"],
    "exclude": ["node_modules", "dist", "examples", "coverage"]
}
