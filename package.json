{
    "name": "nihil.js",
    "version": "0.0.1",
    "description": "An educational journey into the void of frontend frameworks. (Nihil.js - because what's the point anyway? Except learning!)",
    "main": "dist/index.js",
    "scripts": {
        "dev": "tsc -w --preserveWatchOutput",
        "build": "tsc",
        "start:example": "pnpm build && live-server examples/",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.html\" \"*.json\"",
        "check-format": "prettier --check \"src/**/*.ts\" \"examples/**/*.html\" \"*.json\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prepare": "husky"
    },
    "keywords": [
        "javascript",
        "typescript",
        "framework",
        "educational",
        "nihilism"
    ],
    "author": "MateuszSzczukiewicz",
    "license": "MIT",
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.17",
        "@typescript-eslint/eslint-plugin": "^8.32.0",
        "@typescript-eslint/parser": "^8.32.0",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "globals": "^16.1.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "live-server": "^1.2.2",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.0"
    }
}
